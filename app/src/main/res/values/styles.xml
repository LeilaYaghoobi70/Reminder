<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <attr name="navigationBarColor" format="reference" />
    <attr name="colorMonthsBackground" format="reference" />
    <attr name="colorCard" format="reference" />
    <attr name="colorBackground" format="reference" />
    <attr name="colorTextPrimary" format="reference" />
    <attr name="colorIcon" format="reference" />
    <attr name="colorTextNormal" format="reference" />
    <attr name="colorTextSecond" format="reference" />
    <attr name="colorTextHoliday" format="reference" />
    <attr name="colorHoliday" format="reference" />
    <attr name="colorHolidaySelected" format="reference" />
    <attr name="colorTextDrawer" format="reference" />
    <attr name="colorTextDay" format="reference" />
    <attr name="colorTextToday" format="reference" />
    <attr name="colorTextDayName" format="reference" />
    <attr name="colorMonthSwitch" format="reference" />
    <attr name="colorTextAthan" format="reference" />
    <attr name="colorDivider" format="reference" />
    <attr name="colorCurrentDay" format="reference" />
    <attr name="colorSelectDay" format="reference" />
    <attr name="colorEventLine" format="reference" />
    <attr name="colorDrawerBackground" format="reference" />
    <attr name="colorDrawerSelect" format="reference" />
    <attr name="colorDrawerIcon" format="reference" />
    <attr name="coloredTabBackground" format="reference" />
    <attr name="coloredTabTextColor" format="reference" />
    <attr name="normalTabTextColor" format="reference" />
    <attr name="appDivider" format="reference" />
    <attr name="toolbarTheme" format="reference" />
    <attr name="menuIconColor" format="reference" />
    <attr name="dragIconColor" format="reference" />
    <attr name="coloredTabIndicatorColor" format="reference" />
    <attr name="colorTextDaySelected" format="reference" />

    <style name="AppTheme.AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="dialogCornerRadius">20dp</item>
    </style>

    <style name="DarkTheme" parent="Theme.MaterialComponents.NoActionBar"/>


    <style name="ShadowTextStyle">
        <item name="android:paddingLeft">1dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">12sp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif</item>
    </style>

    <style name="AboutCard">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="tabIconTint">?attr/colorTextSecond</item>
     <!--   <item name="tabTextAppearance">@style/customTabTextAppearance</item>-->
        <item name="tabBackground">?attr/colorCard</item>
        <item name="tabTextColor">?attr/normalTabTextColor</item>
    </style>

    <style name="TabLayoutColored" parent="Widget.MaterialComponents.TabLayout.Colored">
        <item name="tabIndicatorColor">?attr/coloredTabIndicatorColor</item>
        <item name="tabBackground">?attr/coloredTabBackground</item>
        <item name="tabTextColor">?attr/coloredTabTextColor</item>
    </style>
    
    <style name="switchColor" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/pink2</item>
        <item name="colorPrimaryDark">#FFE0DB</item>
        <item name="colorAccent">@color/pink</item>
    </style>

    <dimen name="text_size_title">16</dimen>

</resources>
